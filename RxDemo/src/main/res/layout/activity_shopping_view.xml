<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_shopping_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/paleturquoise"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              tools:context="com.tamsiree.rxdemo.activity.ActivityShoppingView">

    <com.tamsiree.rxui.view.RxTitle
        android:id="@+id/rx_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        app:title="添加购物控件"/>

    <Button
        android:id="@+id/btn_take_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="外卖点单界面"/>

    <com.tamsiree.rxui.view.RxShoppingView
        android:id="@+id/sv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>

    <com.tamsiree.rxui.view.RxShoppingView
        android:id="@+id/sv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        app:sv_bg_color="#CD5555"
        app:sv_text="点击购买"/>

    <com.tamsiree.rxui.view.RxShoppingView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        app:sv_bg_color="@color/green_388e3c"
        app:sv_duration="200"
        app:sv_text="SHOPPING"
        app:sv_text_size="22sp"/>

    <com.tamsiree.rxui.view.RxShoppingView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        app:sv_bg_color="#D8BFD8"
        app:sv_duration="100"
        app:sv_text="rxui"
        app:sv_text_size="18sp"/>


</LinearLayout>
